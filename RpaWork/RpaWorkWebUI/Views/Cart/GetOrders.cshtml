@model List<OrderModel>

@{
    ViewData["Title"] = "GetOrders";
}

<h1>Orders</h1>
<hr>

@foreach (var order in Model)
{
    <table class="table table-bordered table-sm mb-3">
        <thead class="bg-primary">
            <tr>
                <td>Name</td>
                <td>Description</td>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in order.OrderDetailModels)
            {
                <tr>
                    <td>
                        @orderItem.Name
                    </td>
                    <td>@order.Description</td>
                    <td>@orderItem.Price</td>
                    <td>@orderItem.Quantity</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td rowspan="6">Total: @order.TotalPrice().ToString("c")</td>
            </tr>
        </tfoot>
    </table>
}